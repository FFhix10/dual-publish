{
  "name": "dual-publish",
  "version": "1.0.3",
  "description": "Publish project as dual ES modules and CommonJS package",
  "keywords": [
    "esm",
    "es modules",
    "dual package",
    "publish",
    "npm"
  ],
  "bin": "./bin.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "test": "jest --coverage && eslint . && yaspeller *.md"
  },
  "dependencies": {
    "clean-publish": "^2.0.0",
    "colorette": "^1.2.2",
    "globby": "^11.0.2",
    "line-column": "^1.0.2",
    "rimraf": "^3.0.2"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/dual-publish",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@logux/eslint-config": "^45.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.4.1",
    "esbuild": "^0.8.12",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.17.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^28.0.2",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "metro": "^0.59.0",
    "metro-react-native-babel-transformer": "^0.59.0",
    "nanoid": "^3.1.20",
    "parcel": "1.12.3",
    "rollup": "^2.41.0",
    "rollup-plugin-svg": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "simple-pre-commit": "^1.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "webpack": "^5.24.4",
    "yaspeller": "^7.0.0"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "jest/no-conditional-expect": "off",
      "node/global-require": "off"
    }
  },
  "eslintIgnore": [
    "test/fixtures/"
  ],
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "test/fixtures/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix"
  },
  "simple-pre-commit": "npx lint-staged",
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "JS",
      "ES",
      "CommonJS",
      "js",
      "bundlers",
      "webpack",
      "GitHub",
      "configs",
      "npm",
      "dirs",
      "ESM",
      "dir",
      "NanoEvents",
      "as ESM or",
      "subfolders",
      "16M",
      "or esbuild",
      "CDNs",
      "jspm",
      "stacktrace",
      "Rollup",
      "CI"
    ]
  }
}
